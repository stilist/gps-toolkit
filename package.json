{
  "name": "gps-toolkit",
  "description": "A from-scratch implementation of the GPS standard. Supports encoding and decoding data streams.",
  "author": "Jordan Cole <stilist@ratafia.info>",
  "repository": "git://github.com/stilist/gps-tookit.git",
  "bugs": "https://github.com/stilist/gps-tookit/issues",
  "homepage": "https://github.com/stilist/gps-tookit",
  "license": "MIT",
  "version": "1.0.0-beta",
  "main": "lib/index.js",
  "keywords": [
    "cdma",
    "goldcode",
    "gps",
    "lfsr",
    "m-sequence"
  ],
  "devDependencies": {
    "babel-cli": "~6.9.0",
    "babel-polyfill": "~6.9.0",
    "babel-preset-es2015": "~6.9.0",
    "eslint": "~2.11.0",
    "eslint-config-standard": "~5.3.0",
    "eslint-plugin-jsdoc": "~2.3.0",
    "eslint-plugin-promise": "~1.3.0",
    "eslint-plugin-standard": "~1.3.0",
    "jsdoc": "~3.4.0",
    "mocha": "~2.5.0"
  },
  "scripts": {
    "doc": "jsdoc src/ --configure jsdoc.json --destination doc",

    "lint": "eslint src/ test/",
    "pretest": "npm run lint",
    "test": "npm run test:spec",
    "test:spec": "mocha test/*.spec.js",

    "prebuild": "npm run doc && npm test",
    "build": "babel src/index.js --out-file lib/index.js --source-maps",
    "preversion": "npm run build"
  }
}
