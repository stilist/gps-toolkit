{
  "name": "gps-toolkit",
  "description": "A from-scratch implementation of the GPS standard. Supports encoding and decoding data streams.",
  "author": "Jordan Cole <stilist@ratafia.info>",
  "repository": "git://github.com/stilist/gps-tookit.git",
  "bugs": "https://github.com/stilist/gps-tookit/issues",
  "homepage": "https://github.com/stilist/gps-tookit",
  "license": "MIT",
  "version": "1.0.0-beta",
  "main": "lib/index.js",
  "keywords": [
    "cdma",
    "goldcode",
    "gps",
    "lfsr",
    "m-sequence"
  ],
  "devDependencies": {
    "babel-cli": "~6.8.0",
    "babel-polyfill": "~6.8.0",
    "babel-preset-es2015": "~6.6.0",
    "jsdoc": "~3.4.0",
    "mocha": "~2.4.0",
    "standard": "~7.0.0"
  },
  "scripts": {
    "doc": "jsdoc src/ --configure jsdoc.json --destination doc",

    "lint": "standard src/ test/",
    "build": "babel src/index.js --out-file lib/index.js --source-maps",
    "release": "npm run lint && npm run build",

    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel-core/register test/*.spec.js"
  }
}
